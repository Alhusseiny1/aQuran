ion-view(title='"Recitations"')
    ion-content(has-header='true', overflow-scroll='true', padding='false')
        .list
            label.item.item-radio(ng-repeat='recitation in recitations', ng-click='options.audio.id = recitation.subfolder')
                input(type='radio', name='recitations', ng-checked='recitation.subfolder == options.audio.id')
                .item-content {{ recitation.name }}
                i.radio-icon.ion-checkmark